<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="
     http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
     ">

    <bean class="net.bus.web.common.config.RString">
        <!-- Login -->
        <property name="LOGIN_SUCCESS" value="登录成功"/>
        <property name="LOGIN_FAILED" value="手机或密码错误"/>

        <!-- Register -->
        <property name="REGISTER_FAILED_USER_HAD" value="手机已注册"/>
        <property name="REGISTER_FAILED_SMS_CODE" value="验证码不正确"/>

        <!-- Sms -->
        <property name="SMS_FAILED_NO_PHONE" value="手机号为空"/>
        <property name="SMS_FAILED_REPEAT_SEND" value="慢一点获取验证码吧"/>
        <property name="SMS_FAILED_SEND" value="验证码发送失败"/>

        <!-- User Account -->
        <property name="MODIFY_PASSWORD_FAILED" value="新密码为空或原密码不正确"/>
        <property name="RETRIEVE_PASSWORD_FAILED" value="新密码为空或验证码不正确"/>
        <property name="MODIFY_PHONE_FAILED" value="新手机号不正确或验证码不正确"/>

        <!-- User Base -->
        <property name="ADD_POINT_FAILED" value="增加积分失败"/>
        <property name="UPLOAD_PHOTO_FAILED" value="头像上传失败"/>

        <!-- File Upload -->
        <property name="FILE_UPLOAD_FAILED_EMPTY_FILE" value="上传文件为空"/>
        <property name="FILE_UPLOAD_FAILED_EXT" value="上传文件类型不正确"/>
    </bean>
</beans>